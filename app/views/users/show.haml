- content_for :head do
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?sensor=false"
  
- title t("userlist.user_profile", :name => @user.name )

- if @user.avatar
    %div{ :style => 'float: right;' }=  link_to_function(     |
       image_tag( w3c_url(@user.avatar_url(:thumb)), :class => "img-with-shadow" ),        |
       "image_popup('#{w3c_url(@user.avatar_url(:popup))}')") |

%div User: #{@user.name}

- if user_signed_in?
    %h3= t(:your_account)
    %ul
        %li
            - if current_user == @user || current_user.role?(:admin  )
                = link_to t(:edit_profile), edit_registration_path(@user)
    %h3= t(:your_location)
    %ul
        %li
            - if current_user && current_user.location[:lat].present? && current_user.location[:lng].present?
                %br
                %div{:id => 'users-location-map'}= t(:loading)
            - else
                = t(:no_location_given)
                
    %strong= t(:invite_user)
    %ul
        %li
            = link_to t(:send_invitaiton), new_user_invitation_path(current_user),
                :id => 'invitation_link'

